{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    // --strict: --noImplicitAny, --strictNullChecks, --noImplicitThis,
    // --alwaysStrict.
    "strict": true,
    "allowJs": true,
    "checkJs": true,  // allows type checking in JS files
    "removeComments": true,
    "module": "commonjs",
    "target": "es5"
  },
  "include": [
    "./src/**/*"
  ]
}
